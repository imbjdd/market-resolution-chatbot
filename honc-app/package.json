    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "express": "^4.18.2",
    "fuse.js": "^7.1.0",
    "hono": "^4.7.0",
    "hono-openapi": "^0.4.6",
    "openai": "^5.12.2",
    "postgres": "^3.4.5",
    "zod": "^3.23.8",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/vitest-pool-workers": "^0.8.31",
